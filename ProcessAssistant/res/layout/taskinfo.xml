<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
<TextView android:id="@+id/taskinfonameheading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFCC125"
              android:textStyle="bold"
              
               />
<TextView android:id="@+id/taskinfonametext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                        /> 
                        
<TextView android:id="@+id/taskinfondescheading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFCC125"
              android:textStyle="bold"
              
               />
<TextView android:id="@+id/taskinfondesctext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                        />  
                        
<TextView android:id="@+id/taskinfonameinternetheading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFCC125"
              android:textStyle="bold"
              
               />
<TextView android:id="@+id/taskinfointernettext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                        />    
                        
<TextView android:id="@+id/taskinfoavailabilityheading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFCC125"
              android:textStyle="bold"
              
               />
<TextView android:id="@+id/taskinfoavailabilitytext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                        />  

<TextView android:id="@+id/taskinfodurationheading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFCC125"
              android:textStyle="bold"
              
               />
<TextView android:id="@+id/taskinfodurationtext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                        />  
                          
    <Button android:id="@+id/taskgmapbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View map"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true" 
            android:layout_gravity="center"
            />
    
</LinearLayout>
</ScrollView>